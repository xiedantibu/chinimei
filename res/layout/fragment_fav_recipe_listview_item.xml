<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/activated_background_light" >

    <ImageView
        android:id="@+id/fav_recipe_listview_item_cover"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8.0dip"
        android:background="@color/background_light"
        android:padding="2.0dip"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/fav_recipe_listview_item_cover"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fav_recipe_listview_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/comment_username_style" />

        <TextView
            android:id="@+id/fav_recipe_listview_item_ingredients"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:ellipsize="end"
            android:lines="2"
            android:text="@string/fragment_personal_zhuliao_text"
            android:textAppearance="@style/comment_content_style" />
    </LinearLayout>

</RelativeLayout>