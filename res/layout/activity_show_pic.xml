<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_pic_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/abs__background_holo_dark" >

    <android.support.v4.view.ViewPager
        android:id="@+id/show_pic_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/show_pic_info"
        android:layout_width="fill_parent"
        android:layout_height="128.0dip"
        android:layout_gravity="bottom"
        android:background="@drawable/biz_pic_words_bg"
        android:maxHeight="140.0dip"
        android:minHeight="40.0dip"
        android:padding="14.0dip" >

        <LinearLayout
            android:id="@+id/show_pic_linear_textzone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/show_pic_text_setname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/show_pic_imgsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:textColor="#ffffffff"
                android:textSize="14.0sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/show_pic_txtscroll"
            android:layout_width="fill_parent"
            android:layout_height="94.0dip"
            android:layout_below="@id/show_pic_linear_textzone"
            android:scrollbarThumbVertical="@drawable/biz_pic_scrollbar_handle" >

            <TextView
                android:id="@+id/show_pic_imginfo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:lineSpacingExtra="3.0dip"
                android:paddingRight="5.0dip"
                android:textColor="#ffffffff"
                android:textSize="14.0sp" />
        </ScrollView>
    </RelativeLayout>

</FrameLayout>