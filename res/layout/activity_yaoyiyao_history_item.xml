<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yaoyiyao_history_item_root"
    android:layout_width="fill_parent"
    android:layout_height="200dp" >

    <ImageView
        android:id="@+id/yaoyiyao_history_item_image"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/yaoyiyao_pic_background" />

    <TextView
        android:id="@+id/yaoyiyao_history_item_text"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_alignParentBottom="true"
        android:background="@color/bright_foreground_light_disabled"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/background_light"
        android:textSize="@dimen/text_size_2" />

</RelativeLayout>