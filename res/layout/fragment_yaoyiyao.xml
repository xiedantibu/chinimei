<?xml version="1.0" encoding="utf-8"?>
<com.xlm.meishichina.widget.pulltorefresh.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xlm.meishichina"
    android:id="@+id/yaoyiyaoRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    app:ptrAnimationStyle="rotate"
    app:ptrMode="pullFromStart" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_recipe_image"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/home_recipe_image_height"
            android:scaleType="fitXY"
            android:src="@drawable/yaoyiyao_pic_background" />

        <RelativeLayout
            android:id="@+id/home_recipe_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip" >

            <TextView
                android:id="@+id/home_recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_normal_orange"
                android:textSize="@dimen/text_size_1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/home_recipe_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:lineSpacingMultiplier="1.2"
            android:paddingTop="5.0dip"
            android:textColor="@color/text_color_gray_black"
            android:textSize="@dimen/text_size_2" />
    </LinearLayout>

</com.xlm.meishichina.widget.pulltorefresh.PullToRefreshScrollView>